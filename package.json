{
  "name": "daily-diet-api",
  "version": "1.0.0",
  "description": "Daily Diet, uma API para controle de dieta di√°ria",
  "main": "index.js",
  "author": "Luiz Rioja <lulyrioja@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src --out-dir build",
    "lint": "eslint src --ext .ts --fix",
    "knex": "node --no-warnings --import tsx ./node_modules/.bin/knex",
    "test": "cypress run --spec \"cypress/e2e/01-users.cy.js,cypress/e2e/02-meals.cy.js\"",
    "test:unit": "cross-env NODE_ENV=test jest --testMatch='**/*.spec.ts' --watchAll=false --no-watchman",
    "test:all": "yarn test:unit && yarn test",
    "report:clean": "rimraf cypress/reports cypress/screenshots cypress/videos reports coverage",
    "report:merge": "mochawesome-merge cypress/reports/mochawesome-*.json > cypress/reports/mochawesome.json",
    "report:generate": "marge cypress/reports/mochawesome.json -o cypress/reports/html",
    "test:with-report": "yarn report:clean && yarn test && yarn report:merge && yarn report:generate",
    "jest:report": "rimraf reports coverage && jest --testMatch='**/*.spec.ts' --watchAll=false --no-watchman",
    "jest:report:open": "node -e \"const { platform } = require('os'); const { exec } = require('child_process'); const open = platform() === 'win32' ? 'start' : 'open'; exec(open + ' reports/jest-stare/index.html'); exec(open + ' reports/jest-html/test-report.html'); exec(open + ' coverage/lcov-report/index.html');\""
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.19.2",
    "knex": "^2.4.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "^1.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.3.3",
    "cross-env": "^7.0.3",
    "cypress": "^14.3.3",
    "eslint": "^8.44.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.1.0",
    "jest-junit": "^16.0.0",
    "jest-stare": "^2.5.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "rimraf": "^5.0.5",
    "sqlite3": "^5.1.6",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "tsup": "^7.1.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
}
